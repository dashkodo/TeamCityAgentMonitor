{
  "manifest_version": 2,

  "name": "TeamCity Status Monitor",
  "short_name" : "TC StatusMon",
  "description": "TeamCity build status displayed in a big screen dashboard format",
  "version": "2.0",

  "author" : "Jamie Holdstock", 

  "permissions": [
    "storage",
    "tabs",
    "http://*/",
    "https://*/",
    "background"
  ],

  "icons": {
  	 "16": "icon/16x16.png",
		 "48": "icon/48x48.png",
		"128": "icon/128x128.png"
  },

  "browser_action": {
  	"default_icon": {                    
    	"19": "icon/19x19.png",           
  		"38": "icon/38x38.png"            
	  },
    "default_title": "Open TeamCity Agent Monitor",
    "default_popup": "html/popup.html"
  },

  "background": {
    "scripts": ["js/background.js"]
  },

  "web_accessible_resources": ["img/spinner.gif"]
}